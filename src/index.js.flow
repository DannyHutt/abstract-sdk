// @flow

export type ProjectDescriptor = {|
  projectId: string
|};

export type CommitDescriptor = {|
  projectId: string,
  branchId: string | "master",
  sha?: string | "latest" // undefined is "latest"
|};

export type BranchDescriptor = CommitDescriptor;

export type CollectionDescriptor = {|
  ...CommitDescriptor,
  collectionId: string
|};

export type FileDescriptor = {|
  ...CommitDescriptor,
  fileId: string
|};

export type PageDescriptor = {|
  ...CommitDescriptor,
  fileId: string,
  pageId: string
|};

export type LayerDescriptor = {|
  ...CommitDescriptor,
  sha: string | "latest",
  fileId: string,
  pageId: string,
  layerId: string
|};

export type Cursor<T> = Promise<{
  value: T,
  done: boolean
}> & {
  currentPage: number // possibly under pageInfo?
  // next(): <T>Cursor,
  // [Symbol.asyncIterator](): string
};

export interface AbstractInterface {
  abstractToken: string;

  organizations: {
    list?: () => Promise<*>
  };

  collections: {
    list: (
      ProjectDescriptor | BranchDescriptor,
      options?: Object
    ) => Promise<*>,
    info: (CollectionDescriptor, options?: Object) => Promise<*>
  };

  commits: {
    list: (BranchDescriptor | FileDescriptor | LayerDescriptor) => Promise<*>,
    info: (BranchDescriptor | FileDescriptor | LayerDescriptor) => Promise<*>
  };

  files: {
    list: BranchDescriptor => Promise<*>,
    info: FileDescriptor => Promise<*>
  };

  pages: {
    list: FileDescriptor => Promise<*>,
    info: PageDescriptor => Promise<*>
  };

  layers: {
    list: FileDescriptor => Promise<*>,
    info: LayerDescriptor => Promise<*>
  };

  data: {
    layer: LayerDescriptor => Promise<*>
  };
}
